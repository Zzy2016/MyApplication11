<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--        colorPrimary 导航栏颜色-->
        <item name="colorPrimary">#455A64</item>
        <!--        colorPrimaryDark通知栏颜色-->
        <item name="colorPrimaryDark">#4F636C</item>
        <!--        colorAccent 控件选中后颜色-->
        <item name="colorAccent">#D81B60</item>
        <!--        <item name="android:statusBarColor">#ffffff</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="mine_text">
        <item name="android:layout_marginTop">@dimen/dimen_24</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <declare-styleable name="EditTextWithTitle">
        <attr name="title_text" format="string"/>
        <attr name="title_color" format="color"/>
        <attr name="et_content" format="string"/>
        <attr name="et_hint" format="string"/>
        <attr name="view_type" format="enum">
            <enum name="text" value="0"/>
            <enum name="edit" value="1"/>
        </attr>
    </declare-styleable>


    <style name="QMUIRoundButton">
        <item name="android:paddingTop">@dimen/btn_padding</item>
        <item name="android:paddingBottom">@dimen/btn_padding</item>
        <item name="android:paddingLeft">@dimen/dimen_16</item>
        <item name="android:paddingRight">@dimen/dimen_16</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

</resources>